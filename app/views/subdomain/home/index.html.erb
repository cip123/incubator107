<% provide(:title, "incubator107 #{@city.name}" ) %>
<% provide(:about_link,  article_path( @city.about_article_id)) %>
<% provide(:workshops_link,  articles_path) %>
<% provide(:contact_link,  article_path( @city.contact_article_id)) %>




<div class="row">
  <div class="span6 offset3">
  	<h3>Register to newsletter</h3>

	<%= form_for( @participant, url: {controller: "participant", action: "subscribe_newsletter"},
             remote: true) do |f| %>

	<%= f.text_field :name %>
  	<%= f.text_field :email %>
  
  <%= f.submit "Follow", class: "btn btn-large btn-primary" %>
<% end %>

  </div>
</div>


