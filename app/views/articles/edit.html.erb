<% provide :title, @article.title %>
<div class="row">
  <div class="col-md-9 col-md-offset-1">
    <fieldset>
      <legend>Edit Article</legend>
      <%= simple_form_for @article,  html: { class: "form-horizontal" } do |f|  %>
        <% if @article.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@article.errors.count, "error") %>
              prohibited this location from being saved:</h2>
            <ul>
              <% @article.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-group ">
          <%= f.label :title, class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.text_field :title, class: "form-control"  %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :text, class: "col-sm-3 control-label " %>
          <div class="col-sm-9">
            <%= f.text_area :text, class: "form-control wysihtml5" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-9 col-sm-offset-3">
            <%= f.submit "Save changes", class: "btn btn-sm" %>
          </div>
        </div>
      <% end %>
      <%= button_to "Delete article", @article, method: :delete, data: {:confirm => "Are you sure you want to delete #{@article.title}?"}, class: "btn btn-sm btn-danger pull-right" %>
    </fieldset>
  </div>
</div>
