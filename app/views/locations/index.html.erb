<% provide(:title, 'Locations') %>

<h3 class="text-center">Listing locations</h3>

  <a href="<%= new_location_path %>">
  <button type="button" class="btn btn-link">
    <span class="glyphicon glyphicon-plus-sign"></span> Add new location
  </button>
</a>



<div class="list-group">
  <%= will_paginate %>
    <% @locations.each do |location| %>
    <a href="<%= edit_location_path(location) %>" class="list-group-item">
      <h4 class="list-group-item-heading"><%= location.name %></h4>
      <p class="list-group-item-text"><%= location.address.blank? ? "  N/A  ": location.address %></p>
    </a>
    <% end %>
    <%= will_paginate %>
</div>

