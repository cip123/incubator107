<% provide(:title, "Edit user") %>
<div class="row">
  <div class="col-md-5 col-md-offset-2">
    <h3>
      Edit user
    </h3>
    <%= simple_form_for @user do |f| %>
      <div class="form-group ">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control", disabled: true %>
      </div>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email, class: "form-control", disabled: true %>
      </div>
      <div class="form-group">
        <%= f.label :role %>
        <%= f.select(:role,  options_for_select(current_user.assignable_roles, @user.role), {}, { :class => "form-control" })  %>
      </div>
      <div class="form-group">
        <%= f.submit "Save changes", class: "btn btn-sm btn-primary form-control" %>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  
  <div class="col-md-2 col-md-offset-2">    
      <%= button_to "Reset password", @user, method: :delete, data: {:confirm => "Are you sure you want to reset #{@user.name}'s password?"}, class: "btn btn-sm" %>      
  </div>

  <div class="col-md-2 col-md-offset-1">
    <%= button_to "Delete account", @user, method: :delete, data: {:confirm => "Are you sure you want to delete #{@user.name}?"}, class: "btn btn-sm btn-danger" %>
    </div>
</div>
